#############################################################################
# Makefile for building targets in sub directories.
# Generated by tmake at 00:43, 2002/12/13
#     Project: dm1-threads
#    Template: subdirs
#############################################################################

MAKEFILE=	Makefile

SUBDIRS	=	src/threads \
		test

all: $(SUBDIRS)

$(SUBDIRS): tmake_all FORCE
	cd $@; $(MAKE)

tmake_all:
	for i in $(SUBDIRS); do ( if [ -d $$i ]; then cd $$i ; $(MAKE) -f $(MAKEFILE); fi; ) ; done

clean:
	for i in $(SUBDIRS); do ( if [ -d $$i ]; then cd $$i ; $(MAKE) $@; fi; ) ; done

FORCE:
